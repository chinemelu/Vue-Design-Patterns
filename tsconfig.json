{
  "files": [],
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "esModuleInterop": true,
    "isolatedModules": false,
    "moduleResolution": "nodenext",
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
  },
  "exclude": ["__tests__/**/*.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "globals": {
    "ts-jest": {
      "babelConfig": true
    }
  }
}
